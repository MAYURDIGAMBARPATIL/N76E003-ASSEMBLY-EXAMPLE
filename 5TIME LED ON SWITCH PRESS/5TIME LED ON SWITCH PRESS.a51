ORG 00H
	P0M1 EQU 0B1H
	P0M2 EQU 0B2H
	P1M1 EQU 0B3H
	P1M2 EQU 0B4H
		
		LED  EQU P0.0
		SWITCH EQU P1.0
			
		MOV P0M1, #00H
		MOV P0M1, #0FFH
		MOV P1M1, #0FFH
		MOV P1M2, #00H
	
		MOV R3,#05H
		
START:	JB SWITCH,START
		ACALL DELAY
		SETB LED
		ACALL DELAY
		DJNZ R3,START
		SJMP $
	
		
DELAY:  MOV R0,#5
HERE3:  MOV R1,#5
HERE2: 	MOV R2,#5
HERE1:  DJNZ R2,HERE1
		DJNZ R1,HERE2
		DJNZ R0,HERE3
		
		RET
		END